@{
    ViewData["Title"] = "Master Kategori";
}

@model IEnumerable<POSApplication.Models.Kategori>

<h1>Daftar Kategori</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Deskripsi</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <td>@kategori.Nama</td>
                <td>@kategori.Deskripsi</td> 
                <td>
                    <a href="/Kategori/Edit/@kategori.Id" class="btn btn-primary">Edit</a>
                    <a href="/Kategori/Delete/@kategori.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Kategori/Create" class="btn btn-success">Tambah Kategori</a>
